@model IEnumerable<Cocktails07.Models.component>
@{
    ViewBag.Title = "Basic Cocktails";
}
<head title="Todos los Cockteles">
    <style type="text/css">
        .Table {
            display: table;
            margin-left: auto;
            margin-right: auto;
        }

        .Title {
            display: table-caption;
            text-align: center;
            font-weight: bold;
            font-size: larger;
        }


        .Row {
            display: table-row;
        }

        .Cell {
            display: table-cell;
            /*border: solid;*/
            border-width: thin;
            padding-left: 1px;
            padding-right: 1px;
        }
    </style>
</head>

@section featured {
    <section class="featured">
        <div class="content-wrapper">
                <hgroup class="title">
                    <h1>@ViewBag.Title.</h1>
                    <h2>@ViewBag.Message</h2>
                    @*<h3>@ViewBag.Message0</h3>*@
                </hgroup>
            @Html.TableAllCocktails(Model.ToList(), 8) 
        </div>
    </section>
}
