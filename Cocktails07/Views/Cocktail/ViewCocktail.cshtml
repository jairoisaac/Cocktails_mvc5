@model IEnumerable<Cocktails07.Models.Ingredient>
<table>
    <tr>
        <th>
            Amount
        </th>
        <th>
            Name
        </th>
        <th>
            Picture
        </th>
        <th>
        </th>
        <th>
        </th>
    </tr>

@foreach (var item in Model) {

        <tr>
        <td id=@item.Name>
            @Html.DisplayFor(modelItem => item.Amount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
        <img src="@Url.MyPictureContent(item.Name,"bigger")" alt="" width="73" height="73" /> 
        </td>
        <td>
        @if (item.Type != "G" && item.Type != "S" && item.Type != "P" )
        {
        <a class="Am" onclick="EditAmount('@item.Name',@item.Amount,'/Amount/@item.CocktailId/@item.Type/@item.Id')" href="javascript:void(0)">
        amount
        </a>
        }
       </td>
        <td>
        <a class="Am" onclick="DeleteIngredient('/DeleteIngredient/@item.CocktailId/@item.Type/@item.Id','@item.Name','@item.CocktailId')" href="javascript:void(0)">
        delete
        </a>
        </td>
    </tr>
}
</table>